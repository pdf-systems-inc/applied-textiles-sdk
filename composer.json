{
    "name": "pdf-systems-inc/applied-textiles-sdk",
    "description": "SDK for Applied Textiles",
    "keywords": [
        "PDF Systems, Inc.",
        "applied-textiles-sdk"
    ],
    "homepage": "https://github.com/pdf-systems-inc/applied-textiles-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Pungello",
            "email": "rob@pdfsystems.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "friendsofphp/php-cs-fixer": "^3.13",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Pdfsystems\\AppliedTextilesSDK\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pdfsystems\\AppliedTextilesSDK\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
